    </PackageReference>
    <PackageReference Include="Tethys.Logging" Version="1.6.0" />
    <PackageReference Include="Tethys.Xml" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tethys.SPDX.KnownLicenses\Tethys.SPDX.KnownLicenses.csproj" />
